<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white_primary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context="com.group4.ui.booking.Booking1Activity">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bạn muốn đặt lịch khám theo dạng nào?"
        style="@style/TextHeading3"
        android:textColor="@color/black_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- RadioGroup chứa các loại khám -->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <RadioButton
            android:id="@+id/rbChuyenKhoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khám chuyên khoa\nKhám theo triệu chứng cụ thể (vd: tim mạch, ...)"
            android:textColor="#1B1F27"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:buttonTint="@color/primary_700" />

        <RadioButton
            android:id="@+id/rbTongQuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khám tổng quát\nKhám sức khỏe định kỳ hoặc kiểm tra toàn diện"
            android:textColor="#1B1F27"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <RadioButton
            android:id="@+id/rbTaiKham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tái khám\nLịch hẹn tái khám hoặc dựa trên lịch sử đặt lịch"
            android:textColor="#A0A0A0"
            android:textSize="14sp"
            android:enabled="false" />
    </RadioGroup>

    <TextView
        android:id="@+id/tvThamChieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tham chiếu mục đã lưu"
        android:textColor="#7F7F7F"
        android:textSize="13sp"
        android:paintFlags="underline"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Nút Tiếp tục -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTiepTuc"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Tiếp tục"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/primary_700"
        android:textStyle="bold"
        android:drawableEnd="@drawable/caret_right"
        android:drawablePadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_solid_blue" />
</androidx.constraintlayout.widget.ConstraintLayout>
