<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:background="@color/white_primary">

        <ImageView
            android:id="@+id/specialtyIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tim_mach"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/specialtyName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Khoa Tim mạch"
            style="@style/TextHeading4"
            android:textColor="@color/black_primary"
            app:layout_constraintBottom_toBottomOf="@+id/specialtyIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/specialtyIcon"
            app:layout_constraintTop_toTopOf="@+id/specialtyIcon"
            app:layout_constraintVertical_bias="0.025" />

        <ImageView
            android:id="@+id/hospitalIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="13dp"
            android:contentDescription="Biểu tượng bệnh viện"
            android:src="@drawable/icon_hospital"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/specialtyName" />

        <TextView
            android:id="@+id/hospitalName"
            android:layout_width="0dp"
            style="@style/TextBody3_600"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:text="Bệnh viện Y dược TP.HCM"
            android:textColor="@color/black_secondary"
            app:layout_constraintBottom_toBottomOf="@+id/hospitalIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/hospitalIcon"
            app:layout_constraintTop_toTopOf="@+id/hospitalIcon"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/addressIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hospitalName" />

        <TextView
            android:id="@+id/addressText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:text="217 Hồng Bàng, Phường 11, Quận 5, TP.HCM."
            android:textColor="@color/black_secondary"
            style="@style/TextBody4_600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/addressIcon"
            app:layout_constraintTop_toTopOf="@+id/addressIcon"
            app:layout_constraintBottom_toBottomOf="@+id/addressIcon" />

        <ImageView
            android:id="@+id/descriptionIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Biểu tượng mô tả"
            android:src="@drawable/description_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addressText" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:text="Chẩn đoán, điều trị và phòng ngừa các bệnh liên quan đến tim và hệ tuần hoàn."
            android:textColor="@color/black_secondary"
            style="@style/TextBody4_600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/descriptionIcon"
            app:layout_constraintTop_toTopOf="@+id/descriptionIcon"
            app:layout_constraintBottom_toBottomOf="@+id/descriptionIcon" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBookAppointmentKhoa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/btn_solid_blue"
            android:paddingVertical="12dp"
            android:textAllCaps="false"
            style="@style/TextBody1_600"
            android:text="Đặt khám"
            android:gravity="center"
            android:textColor="@color/white_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>