<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:background="@drawable/cardfunctions_bg">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/newsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bệnh sởi là gì? Những điều cần biết về bệnh sởi và cách phòng ngừa"
        style="@style/TextBody2_600"
        android:textColor="@color/black_primary"
        android:layout_marginBottom="8dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Ảnh tin tức-->
        <ImageView
            android:id="@+id/newsImage"
            android:layout_width="89dp"
            android:layout_height="89dp"
            android:scaleType="centerCrop"
            android:src="@drawable/newspost" />

        <!-- Phần thông tin bên phải ảnh -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <!-- Tóm tắt -->
            <TextView
                android:id="@+id/newsSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sởi là gì? Sởi là loại bệnh truyền nhiễm cấp tính do virus gây ra có thể gặp ở nhiều đối tượng đặc biệt..."
                style="@style/TextBody3_500"
                android:textColor="@color/black_secondary"
                android:lineSpacingExtra="3dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:breakStrategy="simple"/>

            <!-- Thời gian và Thể loại -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:gravity="start|center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/calendar" />

                    <TextView
                        android:id="@+id/newsDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22/06/2025"
                        style="@style/TextBody3_500"
                        android:textColor="@color/black_secondary"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/newsCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tin y tế"
                    style="@style/TextBody3_600"
                    android:textColor="@color/black_secondary"
                    android:layout_gravity="end|center_vertical"/>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
